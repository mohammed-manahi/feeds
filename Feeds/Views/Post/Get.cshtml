@model Post
@{
    ViewData["Title"] = "Posts";
}
<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                 @if (Model.Image != null)
                                 {
                                     <img style="width:350px;height:350px" src="@Model.Image" alt="">
                                 }
                                 <div class="card-body">
                                    <h5 class="card-title">@Model.Title</h5>
                                    <p class="card-text">
                                        @Model.Body
                                    </p>
                                    <p>
                                        <small>@Model.CreatedOn</small>
                                        <small>@Model.UpdatedOn</small>
                                        <small>@Model.Slug</small>
                                    </p>
                                    <a asp-controller="Post" asp-action="Index" class="btn btn-primary">All Posts</a>
                                </div>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>